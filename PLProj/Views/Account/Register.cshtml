@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter your Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="font-weight-bold"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="font-weight-bold"></label>
        <input asp-for="Password" class="form-control" placeholder="Create a password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label asp-for="ContactNumber" class="font-weight-bold"></label>
        <input asp-for="ContactNumber" class="form-control" placeholder="Enter your Contact Number" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label asp-for="City" class="font-weight-bold"></label>
        <input asp-for="City" class="form-control" placeholder="Enter your City" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label asp-for="Street" class="font-weight-bold"></label>
        <input asp-for="Street" class="form-control" placeholder="Enter your Street" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <input type="submit" value="Register">
    <div class="form-group text-center">
        <p>Do you have an Account? <a asp-action="SignIn">Login Now!</a></p>
    </div>
</form>


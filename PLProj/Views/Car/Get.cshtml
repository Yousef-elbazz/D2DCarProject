@model IEnumerable<CarViewModel>
@{
    ViewData["Title"] = "Cars";
}
<br />
<br />
<br />
<br />
@if (TempData["Message"] is not null)
{
    <div id="successMessage" class="alert alert-success mt-4">
        <h3>@TempData["Message"]</h3>
    </div>

    <script>

        setTimeout(function () {

            var successMessage = document.getElementById("successMessage");
            if (successMessage) {
                successMessage.style.display = 'none';
            }
        }, 3000);
    </script>
}
<div class="d-flex justify-content-center align-items-center flex-column mt-4">

    <h2>Own Cars</h2>
</div>
@if(Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>

            <th>@Html.DisplayNameFor(D => D.Model)</th>
            <th>@Html.DisplayNameFor(D => D.Model.Brand)</th>
            <th>@Html.DisplayNameFor(D => D.Color)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Ser in Model)
            {
                <tr>
                <td>@Ser.Model.Name</td>
                    <td>@Ser.Model.Brand.Name</td>
                <td>@Ser.Color.Name</td>

                    <partial name="_ButtonPartial" model="@Ser.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 text-center">
        <h3 class="text-muted">There are No Car!</h3>
    </div>
}
<div class="d-flex justify-content-center align-items-center flex-column mt-4">
    <!-- زر إضافة خدمة جديدة -->
    <a asp-controller="Car" asp-action="CreateCar" class="btn btn-dark mb-3">
        @* <i class="fas fa-thin fa-square-plus"><i/> *@
        Add New Car
    </a>

</div>



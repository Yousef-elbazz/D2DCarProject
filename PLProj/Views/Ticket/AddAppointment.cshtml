@model AddAppointmentViewModel


@{
    var TechnicianList = ViewData["Technicain"] as SelectList;
    var DriverList = ViewData["Driver"] as SelectList;
    ViewData["Title"] = "AddAppointment";

}

<h1> Add Appointment</h1>
<div class="col-md-6 offset-md-3">
    <div class="hive-box" style="border: 1px solid #dee2e6; border-radius: 5px; padding: 20px; background-color: #f8f9fa;">

        <form asp-action="AddAppointment" asp-controller="Ticket" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="TechnicianId" class="control-label"></label>
                <select asp-for="TechnicianId" asp-items="TechnicianList" class="form-control">
                    <option value="@null">--Select Technician--</option>
                </select>
                <span asp-validation-for="TechnicianId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="form-label"> </label>
                <select class="form-control" asp-for="DriverId" asp-items="DriverList" required>
                    <option value="@null"> --Select Driver-- </option>
                </select>
                <span asp-validation-for="DriverId" class="text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="StartDateTime" class="font-weight-bold"></label>
                <input asp-for="StartDateTime" class="form-control" placeholder="Enter your Start Date Time" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>


            <br />
            <div class="form-group text-center mb-2">
                <input type="submit" style="margin-left: 5px; margin-top: 110px;" class="main-btn" value="Sign Up" />

            </div>


        </form>
    </div>
</div>

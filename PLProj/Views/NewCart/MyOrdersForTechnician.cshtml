@model IEnumerable<OrdeHeader>

<div class="orders-summary container my-5 p-4 shadow-lg rounded bg-dark">
    <h2 class="text-center font-weight-bold mb-4 text-white"> Orders</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No orders found.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Car Plate Number</th>
                        <th>Order Date</th>                        
                        <th>FinishTask</th>                        
                        
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Customer.AppUser.Name</td>
                            <td>@order.Car.PlateNumber</td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="FinishOrder" asp-route-Id="@order.Id" class="btn btn-dark">
                                    <i class="fas fa-plus"></i>

                                </a>
                            </td>
                                                       
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- CSS Styling -->
<style>
    .orders-summary {
        background-color: #1c1c1c;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

        .orders-summary h2 {
            font-family: 'Arial', sans-serif;
            font-size: 2rem;
            color: #ffffff;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
        }

    .table-responsive {
        overflow-x: auto;
    }

    .table-dark {
        background-color: #333333;
        color: #ffffff;
    }

        .table-dark th, .table-dark td {
            padding: 15px;
            text-align: center;
        }

        .table-dark th {
            font-weight: bold;
            color: #ffffff;
        }

        .table-dark td {
            color: #ffffff;
        }

    .btn-outline-light {
        color: #ffffff;
        border: 2px solid #ffffff;
        padding: 8px 16px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-light:hover {
            background-color: #ffffff;
            color: #000000;
        }

    .text-muted {
        color: #b0b0b0 !important;
    }
</style>

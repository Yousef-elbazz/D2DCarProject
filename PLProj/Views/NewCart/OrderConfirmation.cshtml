@model int
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="position-relative">
                <!-- جعل الصورة تظهر بالكامل دون اقتصاص -->
                <img src="~/etra/etra.jpg" alt="Order Confirmed" class="img-fluid" style="object-fit: contain; width: 100%; height: 400px;">

                <!-- جعل الكارد يحتوي على النص فقط أسفل الصورة -->
                <div class="card shadow-lg border-0 mt-4">
                    <div class="card-header bg-dark text-white">
                        <h3 class="m-0">Order Confirmation</h3>
                    </div>
                    <div class="card-body p-4 bg-dark text-light">
                        <h4 class="text-light fw-bold">🎉 Congratulations! 🎉</h4>
                        <p class="mt-3 text-white">
                            Your order number <span class="fw-bold fs-5">@Model</span> has been successfully placed!
                        </p>
                        <hr />
                        <p class="small text-muted">
                            Thank you for choosing our service. You will receive an email with the order details shortly.
                        </p>
                        <a href="/" class="btn btn-dark mt-4 px-4 py-2">
                            Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

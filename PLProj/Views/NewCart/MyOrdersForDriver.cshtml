@model IEnumerable<OrdeHeader>

<div class="orders-summary container my-5 p-4 shadow-lg rounded bg-dark">
    <h2 class="text-center font-weight-bold mb-4 text-white"> Orders</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No orders found.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Order Date</th>
                        <th>FinishOrder</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Customer.AppUser.Name</td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                            
                            <td>
                                @if (order.OrderStatus != "finished")
                                {
                                    <a asp-action="FinishOrderDriver" asp-route-Id="@order.Id" class="btn btn-dark">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                }
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- CSS Styling -->
<style>
    .orders-summary {
        background-color: #1c1c1c;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

        .orders-summary h2 {
            font-family: 'Arial', sans-serif;
            font-size: 2rem;
            color: #ffffff;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
        }

    .table-responsive {
        overflow-x: auto;
    }

    .table-dark {
        background-color: #333333;
        color: #ffffff;
    }

        .table-dark th, .table-dark td {
            padding: 12px 20px;
            font-size: 1rem;
            text-align: center;
        }

        .table-dark th {
            font-weight: bold;
            color: #f1f1f1;
        }

        .table-dark td {
            color: #f1f1f1;
        }

        .table-dark tbody tr:hover {
            background-color: #444;
        }

    .btn-dark {
        background-color: #555;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-dark:hover {
            background-color: #333;
        }

    .finished {
        background-color: #28a745; /* خلفية خضراء للأوردرات المنتهية */
    }

    .text-muted {
        color: #b0b0b0 !important;
    }
</style>

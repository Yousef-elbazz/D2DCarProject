@model IEnumerable<OrdeHeader>

<div class="orders-summary container my-5 p-4 shadow-lg rounded bg-white">
    

            <h1 class="text-center text-black fw-bold">Orders</h1>
            <h3 class="text-center text-black mb-4">Your Recent Orders</h3>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No orders found.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-light">
                <thead>
                    <tr>
                        <th>Order Date</th>
                        <th>Total Price</th>
                        <th>Order Status</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>$@order.TotalPrice</td>
                            <td>@order.OrderStatus</td>
                            <td>@order.PaymentStatus</td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-outline-dark btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
</div>
</div>
</div>


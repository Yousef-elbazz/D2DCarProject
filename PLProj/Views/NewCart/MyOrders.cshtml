@model IEnumerable<OrdeHeader>

<div class="orders-summary container my-5 p-4 shadow-lg rounded bg-white">
    <h2 class="text-center font-weight-bold mb-4 text-dark">Orders</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No orders found.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-light">
                <thead>
                    <tr>
                        <th>Order Date</th>
                        <th>Total Price</th>
                        <th>Order Status</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>$@order.TotalPrice</td>
                            <td>@order.OrderStatus</td>
                            <td>@order.PaymentStatus</td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-outline-dark btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- CSS Styling -->
<style>
    .orders-summary {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .orders-summary h2 {
            font-family: 'Arial', sans-serif;
            font-size: 2rem;
            color: #000000;
            text-shadow: 2px 2px 6px rgba(255, 255, 255, 0.5);
        }

    .table-responsive {
        overflow-x: auto;
    }

    .table-light {
        background-color: #f8f9fa;
        color: #000000;
    }

        .table-light th, .table-light td {
            padding: 15px;
            text-align: center;
        }

        .table-light th {
            font-weight: bold;
            color: #000000;
        }

        .table-light td {
            color: #000000;
        }

    .btn-outline-dark {
        color: #000000;
        border: 2px solid #000000;
        padding: 8px 16px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-dark:hover {
            background-color: #000000;
            color: #ffffff;
        }

    .text-muted {
        color: #6c757d !important;
    }
</style>

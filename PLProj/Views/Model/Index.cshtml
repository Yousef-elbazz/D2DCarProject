@model IEnumerable<ModelViewModel>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
@if (TempData["Message"] is not null)
{
    <div id="successMessage" class="alert alert-success mt-4">
        <h3>@TempData["Message"]</h3>
    </div>

    <script>

        setTimeout(function () {

            var successMessage = document.getElementById("successMessage");
            if (successMessage) {
                successMessage.style.display = 'none';
            }
        }, 3000);
    </script>
}
<div class="d-flex justify-content-center align-items-center flex-column mt-4">

    <h2>Models</h2>
</div>
@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.BrandId)</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Ser in Model)
            {
                <tr>
                    <td>@Ser.Id</td>
                    <td>@Ser.Name</td>
                    <td>@Ser.BrandId</td>

                    <td>
                        <a asp-action="Delete" asp-route-Id="@Ser.Id" class="btn btn-dark">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 text-center">
        <h3 class="text-muted">There are No Brands!</h3>
    </div>
}
<div class="d-flex justify-content-center align-items-center flex-column mt-4">
    <a asp-controller="Model" asp-action="Create" class="btn btn-dark mb-3">
        Add New Model
    </a>

</div>

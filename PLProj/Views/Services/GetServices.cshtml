@model IEnumerable<ServiceViewModel>

@{
    ViewData["Title"] = "GetServices";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="d-flex justify-content-center align-items-center flex-column mt-4">
    
    <h2>Services</h2>
    </div>
@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(D => D.Name)</th>                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Ser in Model)
            {
                <tr>                  
                   <td>@Ser.Name</td>
                   
                   @*  <partial name="_ButtonPartial" model="@ser.Id" /> *@
                      <td>
                        <a asp-controller="Service" asp-action="Details" asp-route-Id="@Ser.Id" class="btn btn-dark">
                      <i class="fas fa-eye"></i>
                      Details
                      </a>
                      </td>
                      <td>
                        <a asp-controller="Service" asp-action="Edit" asp-route-Id="@Ser.Id" class="btn btn-dark">
                      <i class="fas fa-edit"></i>
                      Update
                      </a>
                      </td>
                      <td>
                        <a asp-controller="Service" asp-action="Delete" asp-route-Id="@Ser.Id" class="btn btn-dark">
                      <i class="fas fa-trash"></i>
                      Delete
                      </a>
                      </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 text-center">
        <h3 class="text-muted">There are No Services!</h3>
    </div>
}
<div class="d-flex justify-content-center align-items-center flex-column mt-4">
    <!-- زر إضافة خدمة جديدة -->
    <a asp-controller="Services" asp-action="CreateService" class="btn btn-dark mb-3">
        <i class="fas fa-plus"></i> Add New Service
    </a>

</div>

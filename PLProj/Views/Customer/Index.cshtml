<div class="d-flex justify-content-center align-items-center flex-column mt-4">

    <h2>Customers</h2>
</div>
@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.ContactNumber)</th>
                <th>@Html.DisplayNameFor(D => D.City)</th>
                <th>@Html.DisplayNameFor(D => D.Street)</th>


                
                
            </tr>
        </thead>
        <tbody>
            @foreach (var Ser in Model)
            {
                <tr>
                    <td>@Ser.Name</td>
                    <td>@Ser.Email</td>
                    <td>@Ser.ContactNumber</td>
                    <td>@Ser.City</td>
                    <td>@Ser.Street</td>


                    

                   
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 text-center">
        <h3 class="text-muted">There are No Customer!</h3>
    </div>
}
<div class="d-flex justify-content-center align-items-center flex-column mt-4">
    
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark mb-3">
        <i class="fas fa-plus"></i> Home
    </a>

</div>




@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row" style="margin-top: 130px;">
    <div class="col-md-6 offset-md-3">
        <div class="hive-box" style="border: 1px solid #dee2e6; border-radius: 5px; padding: 20px; background-color: #f8f9fa;">
            <h4 class="text-center">Create a new account</h4>
            <hr />
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="form-group">
                    <label asp-for="Input.Name" class="font-weight-bold"></label>
                    <input asp-for="Input.Name" class="form-control" placeholder="Enter your Name" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>         

                <div class="form-group">
                    <label asp-for="Input.Email" class="font-weight-bold"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="font-weight-bold"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Create a password" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Input.ConfirmPassword" class="font-weight-bold"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm your password" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                 <div class="form-group ">
                    <label asp-for="Input.ContactNumber" class="font-weight-bold"></label>
                    <input asp-for="Input.ContactNumber" class="form-control" placeholder="Enter your Contact Number"  />
                    <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Input.City" class="font-weight-bold"></label>
                    <input asp-for="Input.City" class="form-control" placeholder="Enter your City"  />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                 <div class="form-group ">
                    <label asp-for="Input.Street" class="font-weight-bold"></label>
                    <input asp-for="Input.Street" class="form-control" placeholder="Enter your Street" />
                    <span asp-validation-for="Input.Street" class="text-danger"></span>
                </div>
                <div class="form-group mb-4 position-relative">
                    <label asp-for="Input.PrefCommunication" class="font-weight-bold"></label>
                    <div class="custom-dropdown">
                        <select class="form-control" id="pref_comm" name="Input.PrefCommunication">
                            <option value="" disabled selected>-- Select option -- </option>
                            <option value="email">Email</option>
                            <option value="phone">Phone</option>
                            <option value="sms">SMS</option>
                        </select>
                        <i class="fas fa-chevron-down dropdown-icon"></i>
                    </div>
                    <span asp-validation-for="Input.PrefCommunication" class="text-danger"></span>
                </div>

                <div class="form-group text-center mb-3">
                    <button type="submit" class="btn btn-dark btn-block">Register</button>
                </div>
                <div class="form-group text-center ">
                    <p>
                        <a asp-page="./Login" style="color: black;">Already have an account? Log in</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

